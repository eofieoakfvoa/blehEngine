{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "g++",
            "args": [
                "-std=c++23",
                "-g",
                "-I./vendors",
                "-I./lib", 
                "-L./lib",
                "${workspaceFolder}/src/*.cpp",
                "${workspaceFolder}/lib/*.cpp",
                "${workspaceFolder}/lib/stb_image.h",
                "${workspaceFolder}/src/renderer/*.cpp",
                "${workspaceFolder}/src/Services/*.cpp",
                "${workspaceFolder}/src/glad.c",
                "-lglfw3dll",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
}